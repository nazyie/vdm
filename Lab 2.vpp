instance variables
        -- defining the student
        private studentName : seq of char;
        private dateOfBirth : Date;
        private yearOfStudy : nat1;
        private courseRegistered : Course;

        inv yearOfStudy >= 1;

operations
-- operations definition section

functions
-- functions definitions section

end Student
